.search-box
   margin-bottom 30px
   position relative

   @media screen and (min-width 576px)
      margin-bottom 40px

   @media screen and (min-width 768px)
      display none

   &--search
      @media screen and (min-width 768px)
         display block

   &__img
      width 24px
      height 24px
      position absolute
      top -3px
      right 0
      padding 5px
      margin-right -5px
      box-sizing content-box

      @media screen and (min-width 576px)
         width 30px
         height 30px
         top -5px
