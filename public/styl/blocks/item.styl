.item
   &--news
      margin-bottom 10px

      @media screen and (min-width 576px)
         margin-bottom 25px

      @media screen and (min-width 768px)
         margin-bottom 35px

   &__hash-title
      margin-bottom 5px

   &__nikename
      font-family robotobold, sans-serif
      margin-right 5px

   &__img-control
      margin 0 -5px 10px

      @media screen and (min-width 576px)
         padding 0 45px
         margin 0 0 10px

      @media screen and (min-width 768px)
         padding 0 55px
         margin 0 0 40px

   &__icon
      padding 5px
      box-sizing content-box

      @media screen and (min-width 768px)
         padding 0

      &--present
         margin-right 15px
         width 21px
         height 21px

         @media screen and (min-width 576px)
            margin-right 30px
            width 23px
            height 23px

         @media screen and (min-width 768px)
            margin-right 45px
            width 25px
            height 25px

      &--community
         height 21px
         width 28px

         @media screen and (min-width 576px)
            height 23px
            width 30px

         @media screen and (min-width 768px)
            height 26px
            width 33px

      &--like
         height 20px
         width 22px

         @media screen and (min-width 576px)
            margin-right 10px
            height 22px
            width 25px

         @media screen and (min-width 768px)
            margin-right 10px
            height 25px
            width 27px

      &--add
         margin-right 10px
         height 23px
         width 23px

         @media screen and (min-width 576px)
            margin-right 15px
            height 25px
            width 25px

         @media screen and (min-width 768px)
            margin-right 25px
            height 28px
            width 28px

      &--basket
         height 21px
         width 23px

         @media screen and (min-width 576px)
            height 23px
            width 25px

         @media screen and (min-width 768px)
            height 25px
            width 27px

   &__count-likes
      padding-top 3px

      @media screen and (min-width 576px)
         margin-right 25px

      @media screen and (min-width 768px)
         margin-right 25px
