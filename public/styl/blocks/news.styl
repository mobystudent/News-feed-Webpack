.news
	background: url(../img/news-bg-mob.png) no-repeat
	background-size: 100% 45px
	padding: 55px 0 48px
	
	@media screen and (min-device-width: 576px) and (min-device-height: 576px)
		background-size: 100% 88px
		padding: 105px 0 85px
		
	@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
		background: url(../img/news-bg.png) no-repeat
		background-size: 100% 88px
		padding: 105px 0 85px
		
	@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 768px)
		background: url(../img/news-bg.png) no-repeat
		background-size: 100% 104px

	&__wrap
		margin: 0 auto -10px
		padding: 0 15px
		
		@media screen and (min-device-width: 576px) and (min-device-height: 320px)
			max-width: 500px
			
		@media screen and (min-device-width: 576px) and (min-device-height: 576px)
			padding: 0 50px 0
			margin-bottom: -25px
			max-width: 668px
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			padding: 0 50px 0
			margin-bottom: -25px
			max-width: 668px
			box-sizing: content-box
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 768px)
			max-width: 730px
			margin-bottom: -35px

	&__block
		margin-bottom: 10px
		
		@media screen and (min-device-width: 576px) and (min-device-height: 576px)
			margin-bottom: 25px
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			margin-bottom: 25px
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 768px)
			margin-bottom: 35px

	&__img
		margin-bottom: 5px
		
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			margin-bottom: 10px

	&__img-control
		margin-bottom: 5px
		
		@media screen and (min-device-width: 576px) and (min-device-height: 576px)
			padding: 0 45px
			margin-bottom: 10px
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			padding: 0 45px
			margin-bottom: 10px
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 768px)
			padding: 0 55px
			margin-bottom: 45px

	&__icon
		padding: 5px
		box-sizing: content-box
		
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 768px)
			padding: 0

		&--present
			margin-right: 15px
			width: 19px
			height: 19px
			
			@media screen and (min-device-width: 576px) and (min-device-height: 576px)
				margin-right: 30px
				width: 23px
				height: 23px
				
			@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
				margin-right: 30px
				width: 23px
				height: 23px
				
			@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 768px)
				margin-right: 45px

		&--community
			height: 19px
			width: 25px
			
			@media screen and (min-device-width: 576px) and (min-device-height: 576px)
				height: 23px
				width: 30px
				
			@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
				height: 23px
				width: 30px

		&--like
			height: 19px
			width: 21px
			
			@media screen and (min-device-width: 576px) and (min-device-height: 576px)
				margin-right: 10px
				height: 22px
				width: 25px
				
			@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
				margin-right: 10px
				height: 22px
				width: 25px

		&--add
			margin-right: 10px
			height: 21px
			width: 21px
			
			@media screen and (min-device-width: 576px) and (min-device-height: 576px)
				margin-right: 15px
				height: 25px
				width: 25px
				
			@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
				margin-right: 15px
				height: 25px
				width: 25px
				
			@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 768px)
				margin-right: 25px

		&--basket
			height: 19px
			width: 21px
			
			@media screen and (min-device-width: 576px) and (min-device-height: 576px)
				height: 23px
				width: 25px
				
			@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
				height: 23px
				width: 25px
			
	&__count-likes	
		@media screen and (min-device-width: 576px) and (min-device-height: 576px)
			margin-right: 25px
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			margin-right: 25px