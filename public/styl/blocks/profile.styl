.profile
	background: url(../img/profile-bg-mob.png) 0 0px no-repeat
	background-size: 100% 90px
	padding: 45px 0 60px
	
	@media screen and (min-device-width: 576px) and (min-device-height: 576px)
		background: url(../img/profile-bg-mob.png) top center no-repeat
		background-size: inherit
		padding: 110px 0 150px
		
	@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
		background: url(../img/news-bg.png) no-repeat
		background-size: 100% 126px
		padding: 30px 0

	&__user-info
		max-width: 400px
		margin: 0 auto 20px
		
		@media screen and (min-device-width: 576px) and (min-device-height: 576px)
			max-width: none
			margin: 0 auto 35px
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			max-width: none

	&__wrap
		margin: 0 auto
		padding: 0 30px
		
		@media screen and (min-device-width: 576px) and (min-device-height: 576px)
			padding: 0 20px
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			max-width: 730px
			box-sizing: content-box

	&__info
		width: 100%
		
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			width: 445px

	&__header
		margin-top: 25px
		flex-flow: column wrap
		
		@media screen and (min-device-width: 576px) and (min-device-height: 576px)
			margin-top: 70px
			flex-flow: row nowrap
			align-items: flex-end
			width: 100%
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			margin-top: 85px
			flex-flow: row nowrap
			align-items: flex-end
			width: 100%

	&__data-block
		max-width: 135px
		width: 100%
		margin-bottom: 15px
		
		@media screen and (min-device-width: 576px) and (min-device-height: 576px)
			margin-right: 15px
			margin-bottom: 0
			max-width: 185px
			flex: 0 0 50%
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			margin-right: 0
			max-width: 175px

	&__btn
		text-align: center
		width: 100%
		padding: 5px 0
		max-width: 140px
		
		@media screen and (min-device-width: 576px) and (min-device-height: 576px)
			font-size: 22px
			padding: 10px 0
			max-width: 198px
			margin-bottom: 10px
			flex: 0 1 50%
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			padding: 5px 0
			max-width: 160px
			font-size: 22px
			margin-bottom: 20px
			flex: 0 1 50%

	&__control
		border-top: 1px solid #d9d9d9
		border-bottom: 1px solid #d9d9d9
		margin: 0 -30px
		padding: 0 10px
		
		@media screen and (min-device-width: 576px) and (min-device-height: 320px)
			max-width: 500px
			margin: 0 auto
			
		@media screen and (min-device-width: 576px) and (min-device-height: 576px)
			border-top-width: 2px
			border-bottom-width: 2px
			margin: 0 -20px
			padding: 0 30px
			max-width: none
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			border-top-width: 1px
			border-bottom-width: 1px
			padding: 0
			margin: 0
			max-width: none