.profile
	background url(../img/profile-bg-mob.png) 0 0px no-repeat
	background-size 100% 90px
	padding 45px 0 60px

	@media screen and (min-width 576px)
		background url(../img/profile-bg-mob.png) top center no-repeat
		background-size inherit
		padding 110px 0 150px

	@media screen and (min-width 768px)
		background url(../img/content.png) no-repeat
		background-size 100% 126px
		padding 30px 0

	&__user-info
		max-width 400px
		margin 0 auto 20px

		@media screen and (min-width 576px)
			max-width none
			margin 0 auto 35px

	&__wrap
		margin 0 auto
		padding 0 20px

		@media screen and (min-width 576px)
			padding 0 20px

		@media screen and (min-width 768px)
			max-width 730px
			box-sizing content-box

	&__info
		width 100%

		@media screen and (min-width 576px)
			width 445px

	&__header
		margin-top 25px
		flex-flow column wrap

		@media screen and (min-width 576px)
			margin-top 70px
			flex-flow row nowrap
			align-items flex-end
			width 100%

		@media screen and (min-width 768px)
			margin-top 85px

	&__data-block
		max-width 135px
		width 100%
		margin-bottom 15px

		@media screen and (min-width 576px)
			margin-right 15px
			margin-bottom 0
			max-width 185px
			flex 0 0 50%

		@media screen and (min-width 768px)
			margin-right 0
			max-width 175px

	&__btn
		text-align center
		width 100%
		padding 5px 0
		max-width 140px
		font-size 20px

		@media screen and (min-width 576px)
			font-size 22px
			padding 10px 0
			max-width 198px
			margin-bottom 10px
			flex 0 1 50%

		@media screen and (min-width 768px)
			padding 5px 0
			max-width 160px

	&__control
		border-top 1px solid #d9d9d9
		border-bottom 1px solid #d9d9d9
		margin 0 -20px
		padding 0 10px 0 0

		@media screen and (min-width 576px)
			border-top-width 2px
			border-bottom-width 2px
			margin 0 -20px
			padding 0 30px
			max-width none

		@media screen and (min-width 768px)
			border-top-width 1px
			border-bottom-width 1px
			padding 0
			margin 0
