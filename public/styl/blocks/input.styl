.input
  border none
  border-bottom 1px solid color-ac
  width 100%
  padding 5px 15px
  background transparent
  font-size 18px
  placeholder(color-ac,14px)

  @media screen and (min-width 576px)
    font-size 22px
    padding 10px 20px
    border-bottom-width 2px
    placeholder(color-ac,22px)

  &--name
    margin-bottom 20px

    @media screen and (min-width 576px)
      margin-bottom 50px

  &--pass
      padding 5px 35px 5px 15px

   @media screen and (min-width 576px)
      padding: 10px 60px 10px 20px

   &--search-box
      padding: 5px 35px 5px 15px

      @media screen and (min-width 576px)
         padding: 5px 40px 5px 20px
