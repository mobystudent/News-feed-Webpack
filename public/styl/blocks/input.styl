.input
  border none
  border-bottom 1px solid color-ac
  width 100%
  padding 5px 15px
  placeholder(color-ac,14px)

  @media screen and (min-width 576px) and (min-height 576px)
    font-size 22px
    padding 10px 20px
    box-shadow 0 1px 0 0 #dedede
    placeholder(color-ac,22px)

  &--name
    margin-bottom 20px

    @media screen and (min-width 576px) and (min-height 576px)
      margin-bottom 50px

  &--pass
    padding 5px 35px 5px 15px

    @media screen and (min-width 576px) and (min-height 576px)
      padding: 10px 60px 10px 20px
