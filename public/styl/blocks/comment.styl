.comment
	&__count-all
		margin-bottom: 5px
		color-lighten(#999)
		
		@media screen and (min-device-width: 576px) and (min-device-height: 576px)
			font-size: 16px
			margin-bottom: 10px
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			font-size: 16px
			margin-bottom: 10px

	&__name
		font-family: robotobold, sans-serif

	&__link-user
		color: #035
		margin: 0 3px
		color-lighten(#035)
		
		@media screen and (min-device-width: 576px) and (min-device-height: 576px)
			margin: 0 5px
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			margin: 0 5px

	&__textarea
		font: 14px robotoregular, sans-serif
		placeholder(#999, 12px)
		resize: none
		width: 100%
		border: none
		padding: 2px 10px 0
		height: 20px
		
		@media screen and (min-device-width: 576px) and (min-device-height: 576px)
			placeholder(#999, 16px)
			font-size: 16px
			height: 26px
			padding: 5px 10px 2px
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			placeholder(#999, 16px)
			font-size: 16px
			height: 26px
			padding: 5px 10px 2px

	&__item
		margin-bottom: 5px
		
		@media screen and (min-device-width: 576px) and (min-device-height: 576px)
			margin-bottom: 10px
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			margin-bottom: 10px

	&__box
		display: none
		
		@media screen and (min-device-width: 576px) and (min-device-height: 576px)
			display: block
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			display: block

	&__date
		text-transform: uppercase
		font-size: 12px;
		
	&__add
		@media screen and (min-device-width: 576px) and (min-device-height: 576px)
			margin-bottom: 5px
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			margin-bottom: 5px
