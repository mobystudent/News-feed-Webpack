.btns-control
   &--modal
      margin-bottom 10px

      @media screen and (min-width 576px)
         margin-bottom 40px

   &--search
      margin 0 0 30px
      display none

      @media screen and (min-width 576px)
         margin 0 -25px 40px

   &__btn
      color color-ac
      text-align center
      box-shadow 0 10px 46px -20px #081b71
      height 44px
      line-height 42px
      width 100%
      max-width 156px

      @media screen and (min-width 576px)
         height 46px
         line-height 44px

      &:hover
         color #fff
         // box-shadow none

      &--need
         border 2px solid #a2e2f0
         margin-bottom 5px

         &:hover
            background #a2e2f0

         &:active
            background darken(#a2e2f0,15%)
            border-color darken(#a2e2f0,15%)

      &--want
         border 2px solid #f0c3c3
         margin-bottom 5px
         margin 0 10px

         @media screen and (min-width 576px)
            margin 0 30px

         &:hover
            background #f0c3c3

         &:active
            background darken(#f0c3c3,15%)
            border-color darken(#f0c3c3,15%)

      &--given
         border 2px solid #edd3b1

         &:hover
            background #edd3b1

         &:active
            background darken(#edd3b1,15%)
            border-color darken(#edd3b1,15%)

      &--search
         max-width 170px
         box-shadow 10px 10px 18px 0 rgba(8,27,113,.09)

      &--goods
         border 2px solid #bae0f5

         &:hover
            background #bae0f5

      &--people
         border 2px solid #b8c8e6
         margin 0 10px

         @media screen and (min-width 576px)
            margin 0 30px

         &:hover
            background #b8c8e6

      &--tags
         border 2px solid #b5a9d4

         &:hover
            background #b5a9d4
