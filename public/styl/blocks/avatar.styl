.avatar
	border-radius 50%

	&--news
		width 65px
		height 65px
		margin-right 15px

		@media screen and (min-width 576px)
			width 72px
			height 72px
			margin-right 20px

	&--comment
		width 26px
		height 26px
		flex 1 0 auto

		@media screen and (min-width 576px)
			width 26px
			height 26px

	&--profile
		width 90px
		height 90px
		border 3px solid #fff
		box-sizing content-box
		margin-bottom 5px

		@media screen and (min-width 576px) and (min-height 576px)
			width 158px
			height 158px
			margin-bottom 10px

		@media screen and (min-width 768px) and (min-height 320px)
			width 155px
			height 155px

	&--notification
		width 60px
		height 60px
		margin-right 10px

		@media screen and (min-width 576px) and (min-height 320px)
			width 70px
			height 70px

		@media screen and (min-width 768px) and (min-height 320px)
			width 70px
			height 70px
			margin-right 10px

	&__img
		&--notification
			border 2px solid #fff
			border-radius 50%
			height 100%

		&--item
			border 2px solid #fff
			border-radius 50%
			height 100%

	&--note-no-request
		background linear-gradient(to bottom, #b38cc3 0%, #bbe2f6 100%)
		padding 5px

		@media screen and (min-width 576px) and (min-height 320px)
			padding 5px

		@media screen and (min-width 768px) and (min-height 320px)
			padding 5px

	&--friend
		width 55px
		height 55px
		margin-right 10px

		@media screen and (min-width 576px)
			width 65px
			height 65px

		@media screen and (min-width 768px)
			width 65px
			height 65px

	&--item
		width 100px
		height 100px
		margin-bottom 5px

		@media screen and (min-width 576px)
			width 116px
			height 116px
			margin-bottom 10px
