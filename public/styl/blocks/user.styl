.user
	flex 0 0 125px
	margin-right 15px

	@media screen and (min-width 576px)
		margin-right 20px
		box-sizing content-box
		flex 0 0 180px

	@media screen and (min-width 768px)
		flex 0 0 auto

	&--news
		margin 0 0 20px

		@media screen and (min-width 576px)
			margin 0 0 25px

	&--item
		margin 0 0 10px

		@media screen and (min-width 576px)
			margin 0 0 20px

		@media screen and (min-width 768px)
			margin 0 0 25px

	&--modal
		margin 0

	&__info-box
		&--news
			margin-bottom -3px

			@media screen and (min-width 576px)
				margin-bottom -5px

	&__name
		font-size 18px
		margin-bottom 5px

		@media screen and (min-width 576px)
			font-size 32px

		@media screen and (min-width 768px)
			font-size 26px

		&--news
			font-size 20px

			@media screen and (min-width 576px)
				font-size 25px
				margin-bottom 5px

		&--modal
			font-size 16px
			margin 0

			@media screen and (min-width 576px)
				font-size 18px

		&--item
			font-size 20px

			@media screen and (min-width 576px)
				font-size 25px

		&--search
			font-size 16px
			margin 0

			@media screen and (min-width 576px)
				font-size 18px

	&__label--need-it
		font-size 14px
		padding-left 15px
		position relative

		@media screen and (min-width 576px)
			font-size 18px
			padding-left 20px

		&:before
			content ''
			position absolute
			top 3px
			left 0
			width 10px
			height 10px
			border-radius 50%
			background #a2e2f0

			@media screen and (min-width 576px)
				top 6px
				width 11px
				height 11px

			@media screen and (min-width 768px)
				top 6px
				width 11px
				height 11px

	&__span-info
		@media screen and (min-width 576px)
			font-size 22px

		@media screen and (min-width 768px)
			font-size 18px

	&__request
		font-family robotomedium, sans-serif

		&--accept
			font-family robotoregular, sans-serif

	&__nikename
		font-family robotomedium, sans-serif

		@media screen and (min-width 768px)
			margin-bottom 5px

	&__wrap
		width 100%

	&__info
		&--modal
			@media screen and (min-width 576px)
				padding-top 5px

	&__add-user
		position relative
		width 40px
		display inline-block
		flex 0 0 auto

		@media screen and (min-width 576px)
			width 50px

		&:before, &:after
			content ''
			width 2px
			height 24px
			position absolute
			background #c0c0c0
			top 14px
			left 19px

			@media screen and (min-width 576px)
				height 30px
				top 12px
				left 24px

		&:after
			transform rotate(90deg)
