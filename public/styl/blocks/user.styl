.user
	flex: 0 0 110px
	margin-right: 15px
	
	@media screen and (min-device-width: 576px) and (min-device-height: 576px)
		margin-right: 20px
		box-sizing: content-box
		flex: 0 0 180px
		
	@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
		flex: 0 0 auto

	&--news
		margin-bottom: 15px
		
		@media screen and (min-device-width: 576px) and (min-device-height: 576px)
			margin-bottom: 25px

	&__info-box
		&--news
			margin-bottom: -3px
			
			@media screen and (min-device-width: 576px) and (min-device-height: 576px)
				margin-bottom: -4px

	&__name
		display: inline-block
		margin-bottom: 5px
		
		@media screen and (min-device-width: 576px) and (min-device-height: 576px)
			font-size: 32px
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			font-size: 26px
			margin-bottom: 5px
			
		&--news
			@media screen and (min-device-width: 576px) and (min-device-height: 576px)
				font-size: 25px
				margin-bottom: 5px
				
			@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
				font-size: 25px
				margin-bottom: 5px
				
		&--modal
			@media screen and (min-device-width: 576px) and (min-device-height: 576px)
				font-size: 18px
				
			@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
				font-size: 18px

	&__label--need-it
		font-size: 11px
		padding-left: 15px
		position: relative
		
		@media screen and (min-device-width: 576px) and (min-device-height: 576px)
			font-size: 18px
			padding-left: 20px
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			font-size: 18px
			padding-left: 20px

		&:before
			content: ''
			position: absolute
			top: 2px
			left: 0
			width: 7px
			height: 7px
			border-radius: 50%
			background: #a2e2f0
			
			@media screen and (min-device-width: 576px) and (min-device-height: 576px)
				top: 6px
				width: 11px
				height: 11px
				
			@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
				top: 6px
				width: 11px
				height: 11px

	&__span-info
		font-size: 14px
		
		@media screen and (min-device-width: 576px) and (min-device-height: 576px)
			font-size: 22px
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			font-size: 18px

	&__links-wrap
		&--notification 
			padding-top: 10px
			
			@media screen and (min-device-width: 576px) and (min-device-height: 576px)
				padding-top: 15px
				
			@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
				padding-top: 15px

		&--friend
			padding-top: 10px

	&__link
		font-family: robotomedium, sans-serif

		&--nikename
			margin-bottom: 5px

		&--request
			color: #000

		&--accept-request
			color: color-ac

		&--name
			font-family: robotoregular, sans-serif
