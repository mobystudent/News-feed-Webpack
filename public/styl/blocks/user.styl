.user
	flex 0 0 125px
	margin-right 15px

	@media screen and (min-width 576px)
		margin-right 20px
		box-sizing content-box
		flex 0 0 180px

	@media screen and (min-width 768px)
		flex 0 0 auto

	&--news
		margin 0 0 20px

		@media screen and (min-width 576px)
			margin 0 0 25px

	&--item
		margin 0 0 10px

		@media screen and (min-width 576px)
			margin 0 0 20px

		@media screen and (min-width 768px)
			margin 0 0 25px

	&__info-box
		&--news
			margin-bottom -3px

			@media screen and (min-width 576px)
				margin-bottom -5px

	&__name
		display inline-block // посмотреть можно ли удалить
		margin-bottom 5px
		font-size 18px

		@media screen and (min-width 576px)
			font-size 32px

		@media screen and (min-width 768px)
			font-size 26px
			margin-bottom 5px

		&--news
			font-size 20px

			@media screen and (min-width 576px)
				font-size 25px
				margin-bottom 5px

		&--modal
			@media screen and (min-width 576px)
				font-size 18px

		&--item
			font-size 20px

			@media screen and (min-width 576px)
				font-size 25px

	&__label--need-it
		font-size 14px
		padding-left 15px
		position relative

		@media screen and (min-width 576px)
			font-size 18px
			padding-left 20px

		@media screen and (min-width 768px)
			font-size 18px
			padding-left 20px

		&:before
			content ''
			position absolute
			top 3px
			left 0
			width 10px
			height 10px
			border-radius 50%
			background #a2e2f0

			@media screen and (min-width 576px)
				top 6px
				width 11px
				height 11px

			@media screen and (min-width 768px)
				top 6px
				width 11px
				height 11px

	&__span-info
		@media screen and (min-width 576px)
			font-size 22px

		@media screen and (min-width 768px)
			font-size 18px

	&__links-wrap
		&--notification
			padding-top 10px

			@media screen and (min-width 576px)
				padding-top 15px

			@media screen and (min-width 768px)
				padding-top 15px

		&--friend
			padding-top 10px

	&__link
		font-family robotomedium, sans-serif

		&--nikename
			margin-bottom 5px

		&--request
			color #000

		&--accept-request
			color color-ac

		&--name
			font-family robotoregular, sans-serif
