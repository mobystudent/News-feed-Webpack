.header
	position: fixed
	bottom: 0
	left: 0
	right: 0
	background: #fff
	z-index: 10
	max-width: 1024px
	width: 100%
	margin: 0 auto
	
	@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
		position: static

	&__wrap
		padding: 10px 30px
		
		@media screen and (min-device-width: 576px) and (min-device-height: 768px)
			padding: 21px 95px 22px
			
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			padding: 10px 40px 9px

	&__menu
		flex: 1 0 auto
		
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			flex: 0 0 auto

	&__icon
		padding: 5px
		box-sizing: content-box
		
		@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
			margin-right: 40px
			padding: 0

		&--home
			display: block
			order: 1
			height: 19px
			width: 19px
			
			@media screen and (min-device-width: 576px) and (min-device-height: 768px)
				height: 25px
				width: 25px
				
			@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
				display: none
			
		&--search
			order: 2
			width: 18px
			height: 18px
			
			@media screen and (min-device-width: 576px) and (min-device-height: 768px)
				height: 30px
				width: 30px
				
			@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
				order: 1
				height: 30px
				width: 30px

		&--envelope
			order: 4
			width: 20px
			height: 17px
			
			@media screen and (min-device-width: 576px) and (min-device-height: 768px)
				width: 30px
				height: 24px
				
			@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
				order: 3
				width: 30px
				height: 24px

		&--user
			order: 5
			width: 18px
			height: 18px
			
			@media screen and (min-device-width: 576px) and (min-device-height: 768px)
				width: 27px
				height: 27px
				
			@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
				order: 2
				width: 27px
				height: 27px

		&--plus
			order: 3
			width: 24px
			height: 24px
			box-shadow: 0 5px 16px 0px rgba(38, 0, 77, 0.23)
			border-radius: 50%
			padding: 0
			
			@media screen and (min-device-width: 576px) and (min-device-height: 768px)
				width: 42px
				height: 42px
				
			@media screen and (min-width: 768px) and (min-device-width: 768px) and (min-device-height: 320px)
				width: 42px
				height: 42px
				order: 4
				margin: 0